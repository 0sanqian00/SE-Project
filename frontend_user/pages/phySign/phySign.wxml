<!--pages/phySign/phySign.wxml-->
<!-- 体征数据 -->
<view class="phy-sign-data">
  <view wx:for="{{memberInfoWithSignData}}" wx:key="id" class="card">
    <!-- 标题栏 -->
    <view class="title-bar">
      <view class="icon">
        <t-icon prefix="jyly" name="heartrate" size="48rpx" style="color: #ee3d4d;" />
      </view>
      <text class="title-text">心率</text>
    </view>

    <!-- 数据部分 -->
    <view class="data-section">
      <view class="data-row">
        <text class="big-number">{{item.heartRate}}</text>
        <text class="unit">bmp</text>
      </view>
      <view class="data-row">
        <text class="small-text">2024年1月10日</text>
      </view>
    </view>

    <!-- 可视化部分 -->
    <view class="visualization">
      可视化元素
    </view>
  </view>

  <view wx:for="{{memberInfoWithSignData}}" wx:key="id" class="card">
      <view class="card">
        <!-- 标题栏 -->
        <view class="title-bar">
          <view class="icon">
            <t-icon prefix="jyly" name="heartrate" size="48rpx" style="color: #ee3d4d;" />
            <!-- <t-icon prefix="jyly" name="bloodoxygen" size="48rpx" style="color: #ee3d4d;" /> -->
          </view>
          <text class="title-text">血氧</text>
        </view>

        <!-- 数据部分 -->
        <view class="data-section">
          <view class="data-row">
            <text class="big-number">{{ item.bloodOxygen }}</text>
            <text class="unit">%</text>
          </view>
          <view class="data-row">
            <text class="small-text">2024年1月10日</text>
          </view>
        </view>

        <!-- 可视化部分 -->
        <view class="visualization">
          可视化元素
        </view>
      </view>
    </view>


      

    <view wx:for="{{memberInfoWithSignData}}" wx:key="id" class="card">
      <view class="card">
        <!-- 标题栏 -->
        <view class="title-bar">
          <view class="icon">
            <t-icon prefix="jyly" name="bloodsugar" size="48rpx" style="color: #ee3d4d;" />
          </view>
          <text class="title-text">血糖</text>
        </view>

        <!-- 数据部分 -->
        <view class="data-section">
          <view class="data-row">
            <text class="big-number">{{ item.bloodSugar }}</text>
            <text class="unit">mmol/L</text>
          </view>
          <view class="data-row">
            <text class="small-text">2024年1月10日</text>
          </view>
        </view>

        <!-- 可视化部分 -->
        <view class="visualization">
          可视化元素
        </view>
      </view>
</view>

<view wx:for="{{memberInfoWithSignData}}" wx:key="id" class="card">
      <view class="card">
        <!-- 标题栏 -->
        <view class="title-bar">
          <view class="icon">
            <t-icon prefix="jyly" name="temperature" size="48rpx" style="color: #4b72e0;" />
          </view>
          <text class="title-text" style="color: #4b72e0;">体温</text>
        </view>

        <!-- 数据部分 -->
        <view class="data-section">
          <view class="data-row">
            <text class="big-number">{{ item.bodyTem }}</text>
            <text class="unit">°C</text>
          </view>
          <view class="data-row">
            <text class="small-text">2024年1月10日</text>
          </view>
        </view>

        <!-- 可视化部分 -->
        <view class="visualization">
          可视化元素
        </view>
      </view>
</view>
<view wx:for="{{memberInfoWithSignData}}" wx:key="id" class="card">
      <view class="card">
        <!-- 标题栏 -->
        <view class="title-bar">
          <view class="icon">
            <t-icon prefix="jyly" name="bloodpressure" size="48rpx" style="color: #ee3d4d;" />
          </view>
          <text class="title-text">血压</text>
        </view>

        <!-- 数据部分 -->
        <view class="data-section">
          <view class="data-row" style="margin-left: 60rpx;">
            <text class="big-number">{{ item.highPreasure }} / {{ item.lowPreasure }}</text>
            <text class="unit">mmHg</text>
          </view>
          <view class="data-row">
            <text class="small-text">2024年1月10日</text>
          </view>
        </view>

        <!-- 可视化部分 -->
        <view class="visualization">
          可视化元素
        </view>
      </view>
    </view>
  </view>
  