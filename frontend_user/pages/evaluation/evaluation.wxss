.evaluation-page {
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: stretch;
}

.evaluation-header {
  font-size: 30rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.evaluation-form {
  display: flex;
  flex-direction: column;
  flex-grow: 1;
}

.evaluation-item {
  margin-bottom: 100rpx;
  display: flex;
  flex-direction: column;
}

.evaluation-item text {
  margin-bottom: 10rpx;
}

.evaluation-text {
  width: 100%; /* 自适应屏幕宽度 */
  padding: 200rpx; /* 调整 padding 值 */
  border: 1px solid #ccc;
  border-radius: 5rpx;
  box-sizing: border-box; /* 确保 padding 和 border 包含在 width 中 */
  height: 800rpx; /* 设置固定高度 */
  line-height: 5; /* 调整行高 */
}

.submit-button {
  width: 100%;
  padding: 15rpx;
  background-color: #1aad19;
  color: white;
  border: none;
  border-radius: 5rpx;
  cursor: pointer;
  margin-top: auto; /* 将按钮推到容器底部 */
}

.submit-button:active {
  background-color: #179b16;
}
